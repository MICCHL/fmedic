{% extends 'pageBase.html.twig' %}

{% block title %}Specjalizacje{% endblock %}

{% block content %}

    <a class="btn btn-success mt-1 float-end me-2" href="{{ path('specialization_new') }}">Dodaj nową specjalizację</a>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
        {% for specialization in specializations %}
            <tr>
                <td>{{ specialization.id }}</td>
                <td>{{ specialization.name }}</td>
                <td>
                    <a class="ms-1" href="{{ path('specialization_edit', {'id': specialization.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('specialization/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">brak specjalizacji</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
