{% extends 'pageBase.html.twig' %}

{% block title %}Edycja użytownika{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <h1 class="mt-1">Edytuj {{ user.username }}</h1>

    {{ form_start(form)}}

    <div class="mb-1">
        <label>Email</label>
        {{ form_widget(form.email) }}
    </div>

    <div class="mb-1">
        <label>Imię</label>
        {{ form_widget(form.firstname) }}
    </div>

    <div class="mb-1">
        <label>Nazwisko</label>
        {{ form_widget(form.lastname) }}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="mb-1">
            <label>Uprawnienia</label>
            {{ form_widget(form.roles) }}
        </div>

        <div class="form-group form-check">
            <div class="d-flex row mb-2 align-items-center">
                {{ form_widget(form.blocked, {
                    'label' : 'Blokada'
                }) }}
            </div>

        </div>
    {% endif %}

    {{ form_widget(form) }}

    <button class="btn btn-primary">Aktualizuj</button>
    {{ form_end(form) }}

</div>
{% endblock %}


