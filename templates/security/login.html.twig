{% extends 'authBase.html.twig' %}

{% block title %}Login!{% endblock %}

{% block cardBody %}
    <div class="card-header">
        <h3 class="text-center font-weight-light my-4">Panel logowanie</h3>
    </div>

    <div class="card-body">

        {% if error %}
            <div class="alert alert-danger"></div>
        {% endif %}

        <form method="post">
            <label for="inputEmail">Adres email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus>
            <label for="inputPassword">Hasło</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value=""
            >

            <button class="btn btn-lg btn-primary mt-1" type="submit">
                Zaloguj się
            </button>
        </form>


    </div>

    <div class="card-footer text-center py-3">
        <div class="small"><a href="{{ path('app_register') }}">Utwórz nowe konto</a></div>
    </div>
{% endblock %}
